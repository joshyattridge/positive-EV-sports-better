# ==============================================================================
# ODDS SCANNER CONFIGURATION
# ==============================================================================

# Sharp bookmakers used as baseline for true probability (comma-separated)
# Full list: https://the-odds-api.com/sports-odds-data/bookmaker-apis.html
SHARP_BOOKS=pinnacle,betfair_ex_uk,betfair_ex_eu,betfair_ex_au

# Sports to scan for betting opportunities (comma-separated)
# Full list: https://the-odds-api.com/sports-odds-data/sports-apis.html
BETTING_SPORTS=soccer_epl,soccer_efl_champ,soccer_spain_la_liga,soccer_germany_bundesliga,soccer_italy_serie_a,soccer_france_ligue_one,soccer_uefa_champs_league,soccer_uefa_europa_league

# Market types to analyze (comma-separated: h2h, spreads, totals, h2h_3_way)
# Full list: https://the-odds-api.com/sports-odds-data/betting-markets.html
MARKETS=h2h,spreads,totals


# ==============================================================================
# BET QUALITY FILTERS
# ==============================================================================

# Minimum expected value percentage to show a bet (e.g., 0.10 = 10% edge)
MIN_EV_THRESHOLD=0.02

# Minimum win probability to consider (0.0-1.0, e.g., 0.35 = 35% min probability)
MIN_TRUE_PROBABILITY=0.0

# Maximum decimal odds to consider (e.g., 10.0 filters out extreme longshots, 0.0 = no filter)
MAX_ODDS=0.0

# Maximum days ahead to show games (e.g., 2.0 = only games within 2 days, 0 = no filter)
MAX_DAYS_AHEAD=0

# Minimum full Kelly percentage before applying fraction (0.0 = disabled)
MIN_KELLY_PERCENTAGE=0.02


# ==============================================================================
# BANKROLL & BET SIZING
# ==============================================================================

# Total bankroll amount in your currency
BANKROLL=1000

# Kelly fraction for position sizing (0.0-1.0, e.g., 0.5 = half Kelly for safety)
KELLY_FRACTION=0.25

# Round bet amounts to nearest multiple (e.g., 5 = round to Â£5, 0 = no rounding)
BET_ROUNDING=0


# ==============================================================================
# RESULTS DISPLAY/SELECTION OPTIONS
# ==============================================================================

# How to sort opportunities (ev, kelly, expected_profit, odds, match_time)
ORDER_BY=expected_profit

# Sort direction (desc = highest first, asc = lowest first)
SORT_ORDER=desc

# Show only best opportunity per unique outcome (true/false)
# When true: allows Team A win + Over total, or Team A then Team B if odds shift
# When false: allows multiple bets on same outcome (not recommended)
ONE_BET_PER_OUTCOME=true

# Skip outcomes already in bet history (true/false)
# When true: prevents betting on same outcome twice (e.g., won't bet Team A win twice)
# When false: allows rebetting same outcomes as odds change
SKIP_ALREADY_BET_OUTCOMES=true

# Max failed placement attempts before ignoring bet (0 = disabled)
MAX_BET_FAILURES=3


# ==============================================================================
# ADVANCED: VIG ADJUSTMENT
# ==============================================================================

# Remove bookmaker margin before EV calculation (true/false, false = recommended)
USE_VIG_ADJUSTED_EV=false

# Vig removal algorithm (proportional, power, shin)
VIG_REMOVAL_METHOD=proportional
