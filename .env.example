# ============================================
# EV and Probability Thresholds
# ============================================
MIN_EV_THRESHOLD=0.02

# MIN_TRUE_PROBABILITY: Minimum win probability to consider a bet
# Range: 0.0 to 1.0 (e.g., 0.35 = 35% minimum probability)
# This filters out longshot bets to reduce variance
# Recommended values:
# - Conservative: 0.40-0.45 (only take favorites)
# - Moderate: 0.30-0.35 (balanced approach)
# - Aggressive: 0.20-0.25 (include some longshots)
# - No filter: 0.0 (show all positive EV bets)
MIN_TRUE_PROBABILITY=0.0

# MAX_ODDS: Maximum odds to consider for a bet
# Filters out extreme longshots that often have data quality issues
# Range: 0.0+ (e.g., 5.0 = max 5.0 decimal odds)
# Recommended values:
# - Conservative: 3.0-4.0 (only favorites and slight underdogs)
# - Moderate: 5.0-8.0 (include reasonable underdogs)
# - Aggressive: 10.0-15.0 (allow most bets, block extreme longshots)
# - No filter: 0.0 (show all odds)
MAX_ODDS=0.0

# MAX_DAYS_AHEAD: Filter out games too far in the future
# Only show games that commence within this many days
# Reduces odds movement risk and focuses on near-term opportunities
# Range: 0+ (e.g., 2.0 = only games within 2 days)
# Recommended values:
# - Very short term: 1.0 (only games within 24 hours)
# - Short term: 2.0 (games within 2 days)
# - Medium term: 3.0-5.0 (games within 3-5 days)
# - No filter: 0 (show all upcoming games regardless of date)
MAX_DAYS_AHEAD=0

# ============================================
# Kelly Criterion Bet Sizing
# ============================================
# MAX_BET_SIZE is the reference for 100% Kelly
# e.g., if Kelly = 50% and BANKROLL = 100, you bet £50
BANKROLL=1000
KELLY_FRACTION=0.25

# MIN_KELLY_PERCENTAGE: Minimum FULL Kelly percentage to consider a bet
# Filters out low-quality bets BEFORE applying KELLY_FRACTION
# This filters bet quality, then KELLY_FRACTION manages position size/risk
# Range: 0.0 to 1.0 (e.g., 0.02 = 2% full Kelly)
# For a £1000 bankroll with 0.25 Kelly fraction:
# - Full Kelly 0.05 (5%) = £50 if betting full Kelly
# - After 0.25 fraction: £12.50 actual stake (5% × 0.25 × £1000)
# Recommended: 0.01-0.05 (1-5% full Kelly) for quality filtering
# Set to 0.0 to disable filtering
MIN_KELLY_PERCENTAGE=0.02

# ============================================
# Results Sorting
# ============================================
# ORDER_BY: How to sort betting opportunities
# Options: ev, kelly, expected_profit, odds, match_time
# - ev: Sort by expected value percentage (highest edge)
# - kelly: Sort by Kelly % of bankroll (biggest position size)
# - expected_profit: Sort by expected profit in currency (most profit)
# - odds: Sort by bookmaker odds (longest/shortest)
# - match_time: Sort by match start time (chronological)
ORDER_BY=expected_profit

# SORT_ORDER: Direction of sorting
# Options: desc, asc
# - desc: Descending (highest first) - recommended for ev/kelly/expected_profit
# - asc: Ascending (lowest first) - recommended for match_time
SORT_ORDER=desc

# ============================================
# Results Filtering
# ============================================
# ONE_BET_PER_GAME: Only show the best opportunity per game
# Options: true, false
# - true: Shows only 1 bet per game (best according to ORDER_BY setting)
# - false: Shows all opportunities (including multiple bets on same game)
# This helps avoid over-concentration on single matches
ONE_BET_PER_GAME=true

# SKIP_ALREADY_BET_GAMES: Filter out games you've already placed bets on
# Options: true, false
# - true: Won't show opportunities for games already in bet_history.csv
# - false: Shows all opportunities regardless of betting history
# This prevents double-betting on the same game
SKIP_ALREADY_BET_GAMES=true

# MAX_BET_FAILURES: Maximum number of failed placement attempts before ignoring a bet
# If a specific bet opportunity (game_id + market + outcome) fails this many times,
# it will be automatically skipped in future scans to avoid repeated failures
# Default: 3
# Set to 0 to disable this feature
MAX_BET_FAILURES=3
